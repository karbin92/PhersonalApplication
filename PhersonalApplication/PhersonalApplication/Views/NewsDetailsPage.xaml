<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhersonalApplication.Views.NewsDetailsPage">
    <ContentPage.Content>
        <ScrollView Margin="20">
            <Label Grid.Column="0" Text="{Binding ID}" FontSize="15" TextColor="Red" />
            <Label Text="{Binding Rubrik}" FontSize="15" TextColor="Red" />
            <Label Text="{Binding Underrubrik}" FontSize="15" TextColor="Black" />
            <Label Text="{Binding Beskrivning}" FontSize="15" TextColor="Black" />
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
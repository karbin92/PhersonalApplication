<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhersonalApplication.Views.NewsDetailsPage">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Label Grid.Column="0" Text="{Binding ID}" FontSize="15" TextColor="Red" />

            <Label Grid.Column="0" Text="{Binding Rubrik}" FontSize="15" TextColor="Red" />
            <Label Grid.Column="1" Text="{Binding Underrubrik}" FontSize="15" TextColor="Black" />
            <Label Grid.Column="2" Text="{Binding Beskrivning}" FontSize="15" TextColor="Black" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
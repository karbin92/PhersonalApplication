<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhersonalApplication.Views.CustomerCard">
    <ContentPage.Content>
        <Frame BorderColor="Gray"
               Padding="5"
               CornerRadius="5"
               Margin="20"
               HasShadow="True">
            <!--Rotation="90"-->
            <StackLayout>
                <Image Source="phersonalstor.jpg" />
                <Label Text="{Binding Förnamn} "
                   FontSize="Medium"
                   FontAttributes="Bold" />
                <Label Text="{Binding Efternamn} "
                   FontSize="Medium"
                   FontAttributes="Bold" />
                <BoxView Color="Gray"
                   HeightRequest="2"
                   HorizontalOptions="Fill" />
                <Label Text="{Binding Institution}"/>

                <Label Text="{Binding GiltighetsÅr}"/>
                <Label Text="{Binding RegistreringsDatum}"/>
            </StackLayout>
        </Frame>
    </ContentPage.Content>
</ContentPage>